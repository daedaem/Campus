<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.project.dao.UserMapper">

	<insert id="createUser" parameterType="com.ssafy.project.dto.User"
	useGeneratedKeys="true" keyProperty="id" keyColumn="User.id">
		insert into
		user_c(nickname)
		values(#{nickname})
	</insert>
	
	<select id="signin" resultType="int" parameterType="com.ssafy.project.dto.User">
		select count(*)
		from user_c
		where id=#{id} and nickname=#{nickname}
	</select>
</mapper>